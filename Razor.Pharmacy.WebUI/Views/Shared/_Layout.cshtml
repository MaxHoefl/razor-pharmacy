<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Razor.Pharmacy.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Razor.Pharmacy.WebUI.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-xl navbar-dark bg-dark navbar-space">
    	<a href="Shop/Index/" class="navbar-brand">Razor<b>Pharmacy</b></a>
    	<button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
    		<span class="navbar-toggler-icon"></span>
    	</button>
    	<!-- Collection of nav links, forms, and other content for toggling -->
    	<div id="navbarCollapse" class="collapse navbar-collapse justify-content-end">
	        <div class="navbar-nav ml-auto">
    			<a href="#" class="nav-item nav-link active"><i class="bi bi-shop" style="margin-right: 10px;"></i><span>Shop</span></a>
    			<a href="#" class="nav-item nav-link"><i class="bi bi-cart" style="margin-right: 10px;"></i><span>Basket</span></a>
	            <div class="nav-item dropdown">
    				<a href="#" data-toggle="dropdown" id="nav-dropdown-btn" class="nav-item nav-link dropdown-toggle user-action"><i class="bi bi-person-square" style="margin-right: 10px;"></i> User <b class="caret"></b></a>
    				<div class="dropdown-menu" id="nav-dropdown-menu">
    					<a href="#" class="dropdown-item"><i class="bi bi-person-square" style="margin-right: 10px;"></i> Profile</a>
	                    <a href="#" class="dropdown-item"><i class="bi bi-upc" style="margin-right: 10px;"></i> Order History</a>
    					<div class="divider dropdown-divider"></div>
    					<a href="#" class="dropdown-item"><i class="bi bi-box-arrow-right"></i> Logout</a>
    				</div>
    			</div>
    		</div>
    	</div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>